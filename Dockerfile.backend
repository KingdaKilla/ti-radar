FROM python:3.12-slim

WORKDIR /app

# System-Dependencies fuer scipy/numpy
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Python-Dependencies installieren
COPY pyproject.toml .
COPY src/ src/
RUN pip install --no-cache-dir .

# Data-Verzeichnis vorbereiten (wird als Volume gemountet)
RUN mkdir -p /app/data

EXPOSE 8001

CMD ["uvicorn", "ti_radar.app:create_app", "--factory", "--host", "0.0.0.0", "--port", "8001"]
